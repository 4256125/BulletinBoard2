<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_border">

    <TextView
        android:id="@+id/list_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_id"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="제목"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/list_item_writer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_id"
        android:layout_below="@id/list_item_title"
        android:layout_marginStart="8dp"
        android:text="작성자" />

    <TextView
        android:id="@+id/list_item_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/list_item_title"
        android:layout_marginEnd="8dp"
        android:text="@string/list_item_views" />

    <TextView
        android:id="@+id/list_item_edit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/list_item_writer_name"
        android:layout_marginEnd="100dp"
        android:text="작성일" />

    <CheckBox
        android:id="@+id/list_highlight"
        style="?android:attr/starStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:text="@string/notice_edit_highlight"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textAllCaps="false" />

</RelativeLayout>